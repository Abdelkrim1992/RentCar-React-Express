generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model
model User {
  id        Int       @id @default(autoincrement())
  username  String    @unique
  password  String
  isAdmin   Boolean   @default(false) @map("is_admin")
  fullName  String?   @map("full_name")
  email     String?
  createdAt DateTime  @default(now()) @map("created_at")
  bookings  Booking[]

  @@map("users")
}

// Car model
model Car {
  id           Int       @id @default(autoincrement())
  name         String
  type         String
  seats        Int
  power        String
  rating       String
  price        String
  image        String
  special      String?
  specialColor String?   @map("special_color")
  description  String?
  features     String[]
  createdAt    DateTime  @default(now()) @map("created_at")
  bookings     Booking[]

  @@map("cars")
}

// Booking model
model Booking {
  id             Int      @id @default(autoincrement())
  pickupLocation String   @map("pickup_location")
  returnLocation String   @map("return_location")
  pickupDate     String   @map("pickup_date")
  returnDate     String   @map("return_date")
  carType        String   @map("car_type")
  carId          Int?     @map("car_id")
  userId         Int?     @map("user_id")
  name           String?
  email          String?
  phone          String?
  status         String   @default("pending")
  createdAt      DateTime @default(now()) @map("created_at")
  car            Car?     @relation(fields: [carId], references: [id])
  user           User?    @relation(fields: [userId], references: [id])

  @@map("bookings")
}

// Site Settings model
model SiteSettings {
  id          Int      @id @default(autoincrement())
  siteName    String   @default("Ether") @map("site_name")
  logoColor   String   @default("#6843EC") @map("logo_color")
  accentColor String   @default("#D2FF3A") @map("accent_color")
  logoText    String   @default("ETHER") @map("logo_text")
  customLogo  String?  @map("custom_logo")
  updatedAt   DateTime @default(now()) @map("updated_at")

  @@map("site_settings")
}

// Session model - for auth sessions
model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime @map("expires_at")

  @@map("sessions")
}